<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="0.6"
        android:scaleY="0.6">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="wrap_content"
            android:layout_height="721dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="40dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="650dp">

                <ImageView
                    android:id="@+id/imgArticle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardColor1"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tvMainTitleStep"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/caveat_bold"
                    android:text="Step 2"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />


                <com.example.multi_timer2.UnderlineTextView
                    android:id="@+id/tvMainTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="55dp"
                    android:layout_marginBottom="55dp"
                    android:fontFamily="@font/caveat_bold"
                    android:text="Lorem Ipsum is simply dummy text."
                    android:textAlignment="center"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.026" />

                <View

                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="471dp"
                    android:layout_marginBottom="-9dp"
                    android:background="@drawable/bg_shadow"
                    app:layout_constraintBottom_toBottomOf="@+id/imgArticle"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="312dp"
                    android:layout_height="370dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="55dp"

                    android:layout_marginBottom="85dp"
                    android:text="Lorem Ipsum is simply dummy text of
the printing and typesetting industry.
Lorem Ipsum has been. typesetting industry.
Lorem Ipsum.Lorem Ipsum is simply dummy.

"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="28sp"
                    app:layout_constraintBottom_toBottomOf="@+id/btEdit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvMainTitle"
                    app:layout_constraintVertical_bias="0.119" />

                <Button
                    android:id="@+id/btRemove"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="133dp"
                    android:layout_marginBottom="23dp"
                    android:background="@drawable/bt_ui_readmore"

                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Remove"
                    android:textAllCaps="false"
                    android:textColor="@color/background"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imgArticle"
                    app:layout_constraintRight_toRightOf="parent" />


                <Button
                    android:id="@+id/btEdit"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="133dp"
                    android:layout_marginBottom="23dp"
                    android:background="@drawable/bt_ui_readmore"

                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:textColor="@color/background"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imgArticle"
                    app:layout_constraintLeft_toLeftOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>